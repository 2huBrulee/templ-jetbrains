<idea-plugin>
    <id>com.templ.templjetbrains</id>

    <name>Templ</name>

    <vendor url="https://templ.guide/">Templ</vendor>

    <description>Support for the Templ Programming Language</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.ultimate</depends>
    <depends>org.jetbrains.plugins.textmate</depends>
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="templ"
                  language="templ"
                  implementationClass="com.templ.templjetbrains.TemplFileType"
                  extensions="templ"
                  fieldName="INSTANCE"/>

        <editorHighlighterProvider filetype="templ" implementationClass="com.templ.templjetbrains.highlighting.TemplEditorHighlighterProvider"/>
        <projectService serviceImplementation="com.templ.templjetbrains.TemplSettings"/>
        <projectConfigurable groupId="tools" instance="com.templ.templjetbrains.TemplConfigurable"/>
        <platform.lsp.serverSupportProvider implementation="com.templ.templjetbrains.TemplLspServerSupportProvider"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>
</idea-plugin>