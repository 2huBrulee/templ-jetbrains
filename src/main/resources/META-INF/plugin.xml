<idea-plugin>
    <id>com.templ.templ-jetbrains</id>

    <name>Templ</name>

    <vendor url="https://templ.guide/">Templ</vendor>

    <description></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.ultimate</depends>
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="templ"
                  language="templ"
                  implementationClass="com.templ.templjetbrains.TemplFileType"
                  extensions="prisma"
                  fieldName="INSTANCE"/>

        <projectService serviceImplementation="com.templ.templjetbrains.TemplSettings"/>
        <projectConfigurable groupId="tools" instance="com.templ.templjetbrains.TemplConfigurable"/>
        <platform.lsp.serverSupportProvider implementation="com.templ.templjetbrains.TemplLspServerSupportProvider"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>
</idea-plugin>